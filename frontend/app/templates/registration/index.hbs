</span> -->


		{{#if errors}}
		<div class='messagebox' style="display:none">Uw account dient nog gevalideerd te worden. Dit zal binnen enkele werkdagen gebeuren. U ontvangt per e-mail een bericht zodra dit is voltooid.</div>
		{{/if}}

		<form method="post" {{action "submitRegistration" on="submit"}} class="columns">
			<!-- Left column -->

			<div {{bind-attr class="errors.firstName:error :cols-2"}}>
				<label><i class="fa fa-user"></i> Voornaam<span class="required">*</span><br>
					{{input value=formdata.firstName type="text" placeholder="Uw voornaam"}}
				</label>
				{{error-message key=errors.firstName}}
			</div>

			<div {{bind-attr class="errors.middlename:error :cols-2"}}>
				<label><i class="fa fa-user"></i> Tussenvoegsel<br>
					{{input value=formdata.middleName type="text" placeholder="Tussenvoegsel (optioneel)"}}
				</label>

				{{error-message key=errors.middleName}}
			</div>

			<div {{bind-attr class="errors.lastName:error :cols-2"}}>
				<label><i class="fa fa-user"></i> Achternaam<span class="required">*</span><br>
					{{input value=formdata.lastName type="text" placeholder="Uw achternaam"}}
				</label>
				{{error-message key=errors.lastName}}
			</div>

			<div {{bind-attr class="errors.email:error :cols-2"}}>
				<label><i class="fa fa-envelope"></i> Emailadres<span class="required">*</span><br>
					{{input value=formdata.email type="text" placeholder="Uw e-mailadres"}}
				</label>
				{{error-message key=errors.email field="email"}}
			</div>

			<div {{bind-attr class="errors.phone:error :cols-2"}}>
				<label><i class="fa fa-phone"></i> Telefoonnummer<span class="required">*</span><br>
					{{input value=formdata.phone type="text" placeholder="Uw telefoonnummer"}}
				</label>
				{{error-message key=errors.phone}}
			</div>

			<div {{bind-attr class="errors.address:error :cols-2"}}>
				<label><i class="fa fa-home"></i> Adres<span class="required">*</span><br>
					{{input value=formdata.address type="text" placeholder="Uw adres"}}
				</label>
				{{error-message key=errors.address}}
			</div>

			<div {{bind-attr class="errors.postal:error :cols-2"}}>
				<label><i class="fa fa-home"></i> Postcode<span class="required">*</span><br>
					{{input value=formdata.postal type="text" placeholder="Uw postcode"}}
				</label>
				{{error-message key=errors.postal}}
			</div>

			<div {{bind-attr class="errors.city:error :cols-2"}}>
				<label><i class="fa fa-home"></i> Woonplaats<span class="required">*</span><br>
					{{input value=formdata.city type="text" placeholder="Uw woonplaats"}}
				</label>
				{{error-message key=errors.city}}
			</div>

			<div {{bind-attr class="errors.entity:error :cols-2"}}>
				<label><i class="fa fa-users"></i> Entiteit<span class="required">*</span><br>
					{{
                    view Ember.Select
                    contentBinding="form.entities"
                    selectionBinding="formdata.entity"
                    optionLabelPath="content.label"
                    optionValuePath="content.value"
                    }}
				</label>
				{{error-message key=errors.entity}}
			</div>

			<div {{bind-attr class="errors.password:error :cols-2"}}>
				<label><i class="fa fa-lock"></i> Wachtwoord<span class="required">*</span><br>
					{{input value=formdata.password type="password" placeholder="Kies een wachtwoord"}}
				</label>
				{{error-message key=errors.password field="password"}}
			</div>

			<div {{bind-attr class="errors.passwordConfirm:error :cols-2"}}>
				<label><i class="fa fa-lock"></i> Wachtwoord herhalen<span class="required">*</span><br>
					{{input value=formdata.passwordConfirm type="password" placeholder="Herhaal het wachtwoord"}}
				</label>
				{{error-message key=errors.passwordConfirm field="password"}}
			</div>

			<button type="submit" class="btn">Registreren <i class="fa fa-sign-in"></i></button>
		</form>

		<footer>
			{{#link-to 'login' }}Heeft u al een account?<i class="fa fa-caret-right"></i>{{/link-to}}
		</footer>


	</section>



</section>

